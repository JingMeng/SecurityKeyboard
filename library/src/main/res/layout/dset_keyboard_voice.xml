<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <RelativeLayout
        android:id="@+id/rl_switch_system_keyboard"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/dset_keyboard_voice_btn_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/arrow_left"
            android:drawableStart="@drawable/arrow_left"
            android:drawablePadding="3dp"
            android:layout_centerInParent="true"
            android:textColor="@color/dset_text_black"
            android:textSize="16sp"
            android:text="@string/chinese_keyboard" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/btn_voice"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="42dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/dset_keyboard_voice_btn_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_voice"
            android:layout_width="18dp"
            android:layout_height="24dp"
            android:background="@drawable/dset_keyboard_voice_speech_off"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/voice_tips"
            android:textColor="@color/dset_text_black"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>